{% extends 'layouts/layout--content.twig' %}

{% block head %}
{# Custom styles for this page #}
<style>
.swatch {
	display: inline-block;
	width: 96px;
	height: 96px;
}
table {
	border-collapse: collapse;
	margin: 0 auto;
}
td {
	padding: 0 25px;
	vertical-align: middle;
}
tr td:first-of-type {
	padding: 0;
}
</style>
{% endblock %}

{% block content %}
    <h1>Colors</h1>

    <p>See <a href="https://docs.google.com/document/d/1Im_znX1lhiKTYXpN6pUYdvxrcbYJH33rlB09_i08o-A/edit">https://docs.google.com/document/d/1Im_znX1lhiKTYXpN6pUYdvxrcbYJH33rlB09_i08o-A/edit</a></p>

    <table>
    <thead>
        <tr>
            <th></th>
            <th>Sass Variable</th>
            <th>Hex Code</th>
            <th>Comment</th>
        </tr>
    </thead>
    <tbody>
    {% for var,color in colors %}
        <tr>
            <td>
                <span class="swatch" style="background-color: #{{ color.hex|esc_attr }}"></span>
            </td>
            <td>
                <code>{{ var }}</code>
            </td>
            <td>
                <code>#{{ color.hex }}</code>
            </td>
            <td>{{ color.comment }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
