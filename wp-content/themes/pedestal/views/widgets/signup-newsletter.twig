<form class="signup-newsletter-widget"
    action="{{ site.url }}/subscribe-to-email-list/"
    method="POST"
    data-ga-category="Submitted Form"
    data-ga-label="Newsletter Signup Widget">

    <div class="form-fields">
        <fieldset>
            {% include 'partials/email-forms/form-daily-legend.twig' %}
            {% include 'partials/email-forms/form-daily-input-address.twig' %}
            {% include 'partials/email-forms/form-honeypot.twig' %}
        </fieldset>
        <button class="btn form-submit right js-form-submit" type="submit">
            {% include 'partials/email-forms/form-submit-signup-inner.twig' %}
        </button>
        <div class="u-clear-right"></div>
    </div>

    <div class="success-message">
        {% include 'partials/email-forms/form-daily-subscribed.twig' %}
    </div>

</form>
