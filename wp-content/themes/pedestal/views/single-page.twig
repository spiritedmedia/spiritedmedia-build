{% extends 'layouts/layout--content.twig' %}

{% set content_before = true %}

{% block content_before %}
    {% include 'partials/pages/statement.twig' %}
{% endblock %}

{% block content %}

    <article class="c-main__content  {{ item.css_classes }}" {{ item.get_the_data_atts }} >

        <header class="c-main__header js-main-header">
            <h2 class="c-main__title--page  c-main__title">{{ item.get_the_title }}</h2>
        </header>

        <section class="c-main__body  s-post-content">
            {{ item.get_the_content }}
        </section>

    </article>

{% endblock %}
