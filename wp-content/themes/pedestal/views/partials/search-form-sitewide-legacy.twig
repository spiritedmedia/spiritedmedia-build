<div class="search-form--sitewide--legacy">
    <form class="search-form__inner row js-search-form" action="{{ site.url }}" role="search">

        <div class="search-form__input js-search-input">
            <button type="submit" class="search-form__icon--search search-form__icon">
                {{ ped_icon( 'search' ) }}
                <span class="invisible">submit</span>
            </button>

            <input type="text" name="s"
                class="form-input search-form__field  js-search-field"
                id="the-search-field"
                placeholder="Enter search term"
                value="{{ search_query }}"
                tabindex="1"
            />

            <a class="search-form__icon--close  search-form__icon  js-search-icon-close" href="#">
                {{ ped_icon( 'close' ) }}
                <span class="invisible">close search</span>
            </a>
        </div>

        {% include 'partials/loading.twig' %}

    </form>
</div>
