{% spaceless %}
{% set sponsor = slots.active %}

<div class="c-slot__item">
    <p class="c-slot__label">
        {{ sponsor.get_sponsorship_label }}
    </p>

    <p class="c-slot__img">
        <a href="{{ sponsor.get_sponsorship_url }}" class="inner">
            <img src="{{ sponsor.get_sponsorship_img_url }}" alt="{{ sponsor.get_the_title }}" />
        </a>
    </p>
</div>

{% endspaceless %}
