{% spaceless %}
{% import "macros/macros.twig" as macros %}

{% set el__base = 'article' %}
{% set el__header = 'header' %}
{% set el__body = 'figure' %}
{% set el__text = 'figcaption' %}
{% if is_email %}
    {% set el__base = 'div' %}
    {% set el__header = 'div' %}
    {% set el__body = 'div' %}
    {% set el__text = 'div' %}
{% endif %}

<{{ el__base }} class="c-daily-insta  c-panel">
    <{{ el__header }} class="c-daily-insta__header">
        {{ macros.title_bar( _context, {
            'location': 'header',
            'title': 'Instagram of the Day',
            'extra_classes': 'c-daily-insta__title',
            'type': 'lighter'
        } ) }}
    </{{ el__header }}>
    <{{ el__body }} class="c-daily-insta__body  c-figure--img  c-figure">
        <div class="c-daily-insta__img  c-figure__content">
            {% if not is_email %}
            <a href="{{ item.get_embed_url }}" target="_blank">
            {% endif %}
                {{ item.get_featured_image_html( 'lead-image' ) }}
            {% if not is_email %}
            </a>
            {% endif %}
        </div>
        {{ ped_slot( 'component', 'daily_insta' ) }}
        <{{ el__text }} class="c-daily-insta__text  c-figure__text  c-panel__inner">
            <h1 class="c-daily-insta__text__caption  c-figure__text__caption">{{ item.get_embed_caption }}</h1>
            <h2 class="c-daily-insta__author">
                <a href="{{ item.get_embed_url }}" target="_blank">@{{ item.get_embed_author_name }}</a>
            </h2>
        </{{ el__text }}>
    </{{ el__body }}>
</{{ el__base }}>
{% endspaceless %}
