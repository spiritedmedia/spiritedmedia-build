<section class="c-stream  c-stream--standard  js-stream">
    {% set stream = true %}

    <div class="c-stream__items">

        {% if pinned.enabled and pinned.content and not is_search %}
            {% set item = pinned.content %}
            {% include [
                'partials/stream/standard/' ~ pinned.content.get_type ~ '.twig',
                'partials/stream/standard/entity.twig'
            ] %}
        {% endif %}

        {% for index, item in items %}

            {% if loop.index == 4 %}
                {{ macros.nativo( 'home-stream-04' ) }}
            {% endif %}

            {% if loop.index == 8 %}
                {% include 'partials/adverts/dfp-stream-08.twig' ignore missing %}
            {% endif %}

            {% if loop.index == 12 %}
                {{ macros.nativo( 'home-stream-12' ) }}
            {% endif %}

            {% if loop.index == 16 %}
                {% include 'partials/adverts/dfp-stream-16.twig' ignore missing %}
            {% endif %}

            {% include [
                'partials/stream/standard/' ~ item.get_type ~ '.twig',
                'partials/stream/standard/entity.twig'
            ] with {'gaCategory': 'Stream'} %}

        {% endfor %}

    </div>

    {% if is_search and found_results == 0 %}
        <h2 class="c-stream  is-empty">No results found!</h2>
    {% endif %}

    {% if pagination %}
    <footer class="c-stream__footer {{ last_page_classes }}">
        {{ macros.pagination( pagination, { 'show_text': false } ) }}
    </footer>
    {% endif %}

</section>
