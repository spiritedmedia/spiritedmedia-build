{% if featured_posts.items and pagination.is_first_page and not is_search %}
    {% set stream_classes = 'c-stream--has-featured' %}
    {% set stream_featured_items %}
    <div class="c-stream__featured-items row">
        {% include 'partials/stream/featured-posts.twig' with {'items': featured_posts.items } %}
    </div>
    {% endset %}
{% endif %}

<section class="c-stream c-stream--standard js-stream {{ stream_classes }}">
    {% set stream = true %}

    {{ stream_featured_items }}

    <div class="c-stream__items row small-12 columns">

        {% for index, item in items %}

            {% if loop.index == 4 %}
                {% include 'partials/adverts/ad-stream-04.twig' ignore missing %}
            {% endif %}

            {% if loop.index == 8 %}
                {% include 'partials/adverts/ad-stream-08.twig' ignore missing %}
            {% endif %}

            {% if loop.index == 12 %}
                {% include 'partials/adverts/ad-stream-12.twig' ignore missing %}
            {% endif %}

            {% if loop.index == 16 %}
                {% include 'partials/adverts/ad-stream-16.twig' ignore missing %}
            {% endif %}

            {% include [
                'partials/stream/standard/' ~ item.get_type ~ '.twig',
                'partials/stream/standard/entity.twig'
            ] with {'gaCategory': 'Stream'} %}

        {% endfor %}

    </div>

    {% if is_search and found_results == 0 %}
        <h2 class="c-stream  is-empty">No results found!</h2>
    {% endif %}

    {% if pagination %}
    <footer class="c-stream__footer {{ last_page_classes }}">
        {{ macros.pagination( pagination, { 'show_text': false } ) }}
    </footer>
    {% endif %}

</section>
