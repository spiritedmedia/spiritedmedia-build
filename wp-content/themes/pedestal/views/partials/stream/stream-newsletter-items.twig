{% set el__item = 'article' %}
{% set el__heading = 'h2' %}
{% if is_email %}
    {% set el__item = 'div' %}
    {% set el__heading = 'h4' %}
{% endif %}


<div class="c-stream__items  js-stream-items">

{% set first_heading = true %}
{% for item in item.get_items %}

    {% if 'post' == item.type %}

        {% include [
            'partials/stream/newsletter/' ~ item.post.get_type ~ '.twig',
            'partials/stream/newsletter/entity.twig'
        ] with {
          'item': item.post,
          'newsletter_item': item
        } %}

    {% elseif 'heading' == item.type %}
        {% if first_heading %}
            {% if ped_slot( 'newsletter_promoted_event' ) %}
                <{{ el__heading }} class="c-stream__heading  o-rule--underline">Sponsored Event</{{ el__heading }}>
                {{ ped_slot( 'newsletter_promoted_event' ) }}
            {% endif %}
            {% set first_heading = false %}
        {% endif %}

        <{{ el__heading }} class="c-stream__heading  o-rule--underline">{{ item.title }}</{{ el__heading }}>
    {% endif %}

{% endfor %}

</div>
