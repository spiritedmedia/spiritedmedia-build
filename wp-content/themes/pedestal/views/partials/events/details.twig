<div class="c-event__details  c-details-table">

    <table class="c-details-table__inner">

        {% if item.get_what %}
        <tr>
            <th scope="row">What</th>
            <td>{{ item.get_what }}</td>
        </tr>
        {% endif %}

        <tr>
            <th scope="row">Where</th>
            <td>
                {{ macros.event_where( item ) }}
            </td>
        </tr>

        <tr>
            <th scope="row">When</th>
            <td>{{ item.get_when }}</td>
        </tr>

        <tr>
            {% if item.get_cost() %}
            <th scope="row">How much</th>
            <td>{{ item.get_cost() }}</td>
            {% endif %}
        </tr>

    </table>

    {% if item.get_details_link %}
    {{ item.get_details_link }}
    {% endif %}

</div>
