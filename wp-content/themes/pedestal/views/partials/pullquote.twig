{% spaceless %}

{% if url %}
{% set cite_attr = 'cite="' ~ url ~ '"' %}
{% endif %}

{# Use WP alignment helper class #}
{% set align = 'align' ~ align %}

<aside class="pullquote  {{ align }}">
    <blockquote class="pullquote__content" {{ cite_attr }}>
        {{ content }}
    </blockquote>

    {% if credit %}
    <cite class="pullquote__credit">

        {% if credit_link %}
        <a href="{{ credit_link }}" target="_blank" data-ga-category="Pullquote" data-ga-label="Credit">
        {% endif %}

        {{ credit }}

        {% if credit_link %}
        </a>
        {% endif %}

    </cite>
    {% endif %}

</aside>
{% endspaceless %}
