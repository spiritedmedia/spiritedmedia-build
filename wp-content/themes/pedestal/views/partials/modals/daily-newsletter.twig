<div id="subscribe-to-newsletter" class="reveal-modal dark-reveal-modal small" data-reveal>
    <a class="close-reveal-modal">&#215;</a>
    <form action="{{ site.url }}/subscribe-to-email-list/" method="POST"
        data-confirm-id="confirm-subscribe-to-newsletter"
        data-ga-category="Submitted Form"
        data-ga-label="Newsletter Signup Modal">
        <div class="form-fields">
            <fieldset>
                {% include 'partials/email-forms/form-daily-legend.twig' %}
                {% include 'partials/email-forms/form-daily-input-address.twig' %}
                {% include 'partials/email-forms/form-honeypot.twig' %}
            </fieldset>
            <button class="btn btn--secondary btn--large form-submit js-form-submit" type="submit" name="subscribe">
                {% include 'partials/email-forms/form-submit-signup-inner.twig' %}
            </button>
        </div>
    </form>
</div>

<div id="confirm-subscribe-to-newsletter" class="reveal-modal dark-reveal-modal small" data-reveal>
    <a class="close-reveal-modal">&#215;</a>
    <form>
        {% include 'partials/email-forms/form-daily-subscribed.twig' %}
    </form>
</div>
