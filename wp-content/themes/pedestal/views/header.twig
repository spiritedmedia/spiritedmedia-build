<div class="site-wrap">

<header class="site-header" role="banner">
    {% block header %}
    <div class="row">

        <div class="columns small-7 medium-6">
            <h1 class="site-header-logo">
                <a href="{{ site.url }}" rel="home" data-ga-category="Site Logo|Header" data-ga-label="">
                    <span class="site-header-logo__text">Home</span>
                </a>
            </h1>
        </div>

        <ul class="site-ctas columns small-5 medium-6">
            {% include 'partials/site-ctas.twig' with {'location': 'header'} %}
        </ul>

    </div>
    {% endblock %}
</header>

{% if spotlight.enabled and spotlight.content and not is_home %}
<aside id="promoted-story">
    <div class="row">
        <strong>{{ spotlight.label }}</strong>
        <a href="{{ spotlight.content.get_the_permalink }}" data-ga-category="Spotlight|{{ spotlight.label }}" data-ga-label="{{spotlight.content.get_the_title}}">{{ spotlight.content.get_the_title }}</a>
    </div>
</aside>
{% endif %}

{% include 'partials/adverts/dfp-header-300x50.twig' ignore missing %}
