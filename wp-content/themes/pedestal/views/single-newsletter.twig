{% extends item.get_single_base_template %}

{% block content %}

<main role="main" class="{{ main_classes }}">

    <article class="c-newsletter  c-content  c-panel  has-title-bar  {{ item.css_classes }}"
        {{ item.get_the_data_atts }} >

        {{ macros.title_bar( _context, { 'title': 'Newsletter' } ) }}

        <div class="c-panel__inner">

            <header class="c-content__header">
                {{ ped_slot( 'single_lead' ) }}
                <h2 class="c-content__title">{{ item.get_the_title }}</h2>
                <h3 class="c-content__subtitle">{{ item.get_newsletter_subtitle }}</h3>
            </header>

            {% if item.get_instagram_of_the_day %}
            <section class="c-content__lead-img">
                {{ item.get_instagram_of_the_day }}
            </section>
            {% endif %}

            {% if item.get_items %}

            <section class="c-content__entities  c-stream  c-stream--simple  c-stream--pedalized  js-stream">
                {% include 'partials/stream/stream-newsletter-items.twig' %}
            </section>

            {% else %}

            <section class="c-content__body  s-post-content">
                {{ item.get_the_content }}
            </section>

            {% endif %}

            <footer class="c-content__footer  [ o-rule--closure  o-rule ]"></footer>

        </div>

    </article>

</main>

{% endblock %}
