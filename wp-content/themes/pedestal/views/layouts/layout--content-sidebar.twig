{% extends 'base.twig' %}

{% block the_body %}
    <main role="main" class="c-main columns large-8 js-main {{ main_classes }}">
        {% block content %}
        {% endblock %}
    </main>
{% endblock %}

{% block the_sidebar %}
    <aside class="rail columns large-4">
        <ul class="sidebar {{ sidebar_class }}">
            {% block sidebar %}
                {# The default sidebar if no sidebar is specified #}
                <li class="widget signup-email--daily signup-email">
                    {% include 'partials/signup-daily.twig' with {
                        gaLocation: 'Default Sidebar'
                    } %}
                </li>
            {% endblock %}
        </ul>
    </aside>
{% endblock %}
