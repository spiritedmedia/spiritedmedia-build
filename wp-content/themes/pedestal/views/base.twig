{% import "macros/macros.twig" as macros %}
<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{site.language_attributes}}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{site.language_attributes}}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{site.language_attributes}}> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" {{site.language_attributes}}> <!--<![endif]-->
    <head>
        <meta charset="{{site.charset}}" />
        <title>{{wp_title}}</title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta property="fb:pages" content="666155016815882" />
        <link rel="pingback" href="{{site.pingback_url}}" />

        {{function('wp_head')}}

        {% block head %}
        {% endblock %}
        {% include 'partials/header/favicons.twig' ignore missing %}
        {% include 'partials/header/dfp.twig' %}
        {{ parsely.data }}
    </head>
    <body class="{{ body_class }} {{ layout_class }}" data-template="{{ template_name ?: 'base.twig' }}">
        {% include 'header.twig' %}

        {% if content_before %}
        <div class="content-before">
            {% block content_before %}
            {% endblock %}
        </div>
        {% endif %}

        <div class="content-wrapper row">

            {% if sidebar %}
                {% set main_classes = "main columns large-8 js-main" %}
            {% else %}
                {% set main_classes = "main columns js-main" %}
            {% endif %}

            {% block content %}
            {% endblock %}

            {% if sidebar %}
            {% block sidebar %}
            <aside class="rail columns large-4">
                <ul class="sidebar {{ sidebar_class }}">
                    {{ sidebar }}
                </ul>
            </aside>
            {% endblock %}
            {% endif %}
        </div>

        {% include 'footer.twig' %}
    </body>
</html>
