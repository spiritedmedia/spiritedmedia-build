{% extends 'layouts/layout--content.twig' %}

{% block content %}
<div id="subscribe-to-newsletter-page" class="subscription-confirmation-page">


    {% import "macros/macros.twig" as macros %}
    {% if provided_list_ids %}
    <form action="{{ site.url }}/subscribe-to-email-list/" method="POST" data-ga-category="Submitted Form" data-ga-label="Confirm Subscription Fail|List IDs:{{ list_id_str }}">

        <h3 class="form-heading js-form-heading">The confirmation link appears to be bad. Please sign up again.</h3>

        <div class="js-form-fields">
            <fieldset class="field-group">

                {% if is_newsletter %}
                    {% include 'partials/email-forms/form-daily-legend.twig' %}
                    {% include 'partials/email-forms/form-daily-input-address.twig' with {
                        input_classes: 'form-input--lg'
                    } %}
                    {% include 'partials/email-forms/form-honeypot.twig' with {size: 'lg'} %}
                    <div class="js-fail-message invalid-feedback"></div>
                    <button class="btn--lg btn--full-width btn js-form-submit" type="submit">
                        {% include 'partials/email-forms/form-submit-signup-inner.twig' %}
                    </button>
                {% endif %}

                {% if is_cluster %}
                    <legend class="form-group__legend">Follow {{ subscription_title }}</legend>
                    {% include 'partials/email-forms/form-honeypot.twig' with {size: 'lg'} %}
                    {% include 'partials/email-forms/form-follow-cluster-input-address.twig' with {
                        input_classes: 'form-input--lg'
                    } %}
                    {% for list_id in list_ids %}
                        <input type="hidden" name="list-ids[]" value="{{ list_id|e('html_attr') }}">
                    {% endfor %}
                    <div class="js-fail-message invalid-feedback"></div>
                    <button class="btn--lg btn--full-width btn js-form-submit" type="submit">
                        {% include 'partials/email-forms/form-submit-signup-inner.twig' %}
                    </button>
                {% endif %}

                <small class="field-group__text">
                    <a href="mailto:{{ site.emails.contact }}?subject={{ help_text|url_encode }}">Having trouble? Email {{ site.emails.contact }}</a>
                </small>
            </fieldset>
        </div>

        <div class="success-message js-success-message">
            {% include 'partials/email-forms/form-daily-subscribed.twig' %}
        </div>

    </form>
    {% endif %}
</div>
{% endblock %}
