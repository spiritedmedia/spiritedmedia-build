{% extends "base-email.twig" %}

{% block content %}

<div class="email-constrain content-wrapper">

    <div id="entity-container" class="email-subscription  c-panel  has-cap">

        <div class="c-panel__inner">

            <h3 class="h-email-subscription-confirmed">Subscription Confirmed</h3>

            <p class="email-subscription-confirmed-msg">You are now following<br />“<a href='{{ item.get_the_permalink }}'>{{ item.get_the_title }}</a>”</p>

            <p>To unsubscribe, <a href="{{ unsubscribe_link }}">click here</a>.</p>

        </div>

        {{ macros.blox( context, {
            'format': 'cap',
            'title': "Return to " ~ site.name,
            'url': site.url
        } ) }}

    </div>

</div>

{% endblock %}
