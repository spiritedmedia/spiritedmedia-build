{% extends "base-email.twig" %}

{% block content %}

<div class="email-constrain content-wrapper">

    <div id="entity-container" class="email-breaking-news  c-panel  has-story-bar  has-cap">

        <div class="email-breaking-news__header">
            {{ macros.blox( _context, {
                'format': 'header',
                'title': 'BREAKING NEWS'
            } ) }}
        </div>

        <div class="email-breaking-news__entity  c-stream  c-stream--ladder">
            <div class="c-stream__items">
                {% include [
                    'partials/stream/ladder/' ~ item.get_type ~ '.twig',
                    'partials/stream/ladder/entity.twig'
                ] %}
            </div>
        </div>

        <div class="email-breaking-news__footer">
            {{ macros.blox( context, {
                'format': 'cap',
                'title': "Full Story On " ~ site.name,
                'url': item.get_the_permalink
            } ) }}
        </div>

    </div>

</div>

{% endblock %}
