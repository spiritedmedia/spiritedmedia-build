{% extends 'layouts/layout--content-sidebar.twig' %}

{% block content %}
    <article class="c-main__content  {{ item.css_classes }}  {{ item.css_classes_content }}"
        {{ item.get_the_data_atts }} >

        <header class="c-main__header js-main-header  c-overview">
            <div class="c-main__hero  c-hero">
                <div class="c-hero__inner">
                    {% include 'partials/factchecks/statement.twig' %}
                </div>
            </div>

            {% if item.has_featured_image %}
                {% include 'partials/overview/lead-image.twig' %}
            {% endif %}

            {% include 'partials/overview/overline.twig' %}
            {% include 'partials/item-title.twig' with { url: 'none' } %}

            {% if item.get_excerpt %}
                <div class="c-overview__description">
                    {{ item.get_the_excerpt }}
                </div>
            {% endif %}

            {% include 'partials/meta-info/meta-info-entity.twig' %}
            {% include 'partials/share-buttons.twig' %}
        </header>

        <section class="c-main__body s-post-content">
            {% include 'partials/factchecks/content.twig' %}
            {% include 'partials/follow-this-form.twig' %}
        </section>

        {% if item.get_the_footnotes %}
            <aside class="c-main__footnotes  js-content-footnotes">
                {{ item.get_the_footnotes }}
            </aside>
        {% endif %}

        <footer class="c-main__footer js-main-footer o-rule--closure  o-rule">
            {% include 'partials/cluster-list.twig' %}
        </footer>

    </article>
{% endblock %}


{% block sidebar %}
    {% include 'sidebar-factcheck.twig'%}
{% endblock %}
